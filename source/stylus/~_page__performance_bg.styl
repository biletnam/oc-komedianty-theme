.cover-mobile
	display none
	position relative
	// width (30/26)*100%
	// left -(4/26)*100%
	margin-bottom -2em

	// z-index -1

	img
		width 100%
		height auto

	@media screen and (max-width: 480px)
		display block

.bg-block
	@media screen and (max-width: 480px)
		display none

	position absolute
	height 100%
	// width 100%
	top 0
	left 0
	bottom 0
	right 0
	font-size 0
	line-height 1

	// padding-left (50/82)*100%

	@media screen and (max-width: 1370px)
		padding-left (39/85)*100%

	img, svg
		display inline-block
		vertical-align middle
		// @media screen and (max-width: 1600px)
		max-width 100%
		max-height 100%
		width auto
		height auto

	.bg
		text-align right
		font-size 0
		padding 6% 0
		width 100%
		// padding-left 75%
		// max-width 50%

		@media screen and (max-width: 1370px)
			padding 5% 0

		&:before
			content ""
			display inline-block
			height 100%
			vertical-align middle

	.top
		padding-top 0
	.bottom
		padding-bottom 0

	.bg-1
		margin-left -(10/85)*100%
		// margin-top -(1/85)*100%
	.bg-1, .bg-2
		position absolute
		right 0
		// max-width 33%
	.bg-2
		height 100%
		top 1%
		margin 0
		padding 0
	.bg-3
		position absolute
		bottom 0
		right 0
	.bg-4, .bg-5, .bg-6
		position absolute
		text-align left

	.bg-4
		left 0
		bottom 0
	.bg-6
		top 0
		left0
	.bg-5
		height 100%
		left 0
		top -6%
		bottom 0
		margin 0
		padding 0

@media screen and (max-width: 1600px)
	.bg-6
		display none

@media screen and (max-width: 1370px)
	.bg-4, .bg-5, .bg-6
		transform scale(-1,1)
		text-align left
	.bg-4, .bg-5, .bg-6
		display none






