/********************************************************************************************************************************************
 *  PERSON PAGE
 ********************************************************************************************************************************************/
.page.person

	.row
		distribute()
		margin-bottom rem(3*23px)
	.col
		width div(30.5/64)
		vertical-align top
		inline-block()

	.title
		second()
		upcase()
		fs rem(32px)
		line-height 1
		margin-bottom $line

	.grade
		second()
		fs rem(16px)
		line-height (32/16)

	.cols
		columns 2
		columns-gap div(3/64)
		// margin-top 3em

	.content-block
		fs rem(18px)
		line-height (23/18)
		-webkit-column-break-inside avoid
		break-inside avoid
		// margin-top 3em
		// & + .content-block
		// 	margin-top 3em
		padding-bottom 3em
		a
			// border-bottom 1px solid rgba($text,.5)
			// &:hover
			// 	border-bottom 1px solid rgba($brand,.5)
			text-decoration underline
		// h4
		// 	margin-top 3em

	.roles
		// margin-top 0
		.performance-title
			&:before
				content "«"
			&:after
				content "»"
		.performance-author
			display inline
			color $gray
	.press
		// margin-top 3em
		.article-title
			&:before
				content "«"
			&:after
				content "»"
		.article-source
			display inline
			color $gray
			&:before
				content " / "
				color inherit

	// h2, h3, h4, h5, h6
	// 	color $brand

	h4
		// margin-top 3em
		margin-top 0
		upcase()
		first()
		fs rem(23px)
		line-height 1
		font-weight 400
		color $brand

	dl
		display block
		reset-box-model()
		fs rem(18px)
		line-height (23/18)

	dt
		display inline
		reset-box-model()
		&:after
			content " — "
	dd
		display inline
		reset-box-model()
		&:after
			content ""
			display block
			padding-bottom 1em

	ul, li
		margin 0
		padding 0
	li
		list-style none
		// margin-bottom 1.5em

	.press-list
		margin-bottom 1.5em

	.gallery
		position relative

		margin-top 2em

		$c = 560
		$m = 25
		$cnt = 3

		width (($c + $m)/$c)*100%
		margin-bottom -($m/($c + $m))*100%

		font-size 0

		.gallery-item
			display inline-block
			display none
			position relative

			width ((($c + $m) - ($cnt*$m))/$cnt/($c + $m))*100%
			margin 0 ($m/($c + $m))*100% ($m/($c + $m))*100% 0

			padding 0


			overflow hidden

			font-size 0
			transition all .1s ease-out

			&:before
				content ""
				font-size 0
				display block
				width 100%
				padding-bottom 100%
			&:hover
				transform scale(1.15)
			a
				position absolute
				top 0
				width 100%
				height 100%
				display block

			img
				position relative
				opacity 0

			&.item-1,
			&.item-2,
			&.item-3,
			&.item-4,
			&.item-5,
			&.item-6,
			&.item-7,
			&.item-8,
			&.item-9
				display inline-block