.block
	absolute()
	top 0
	left 0
	right 0
	bottom 0
	// outline 1px dotted rgba(white, .1)

	pointer-events none

.bg-container
	z-index -100
	absolute()
	width 100%
	top 0
	bottom 0
	font-size 0

	display none
	// .bg-1,.bg-2,.bg-3,.bg-4,.bg-5,.bg-6
	// 	display none

	.bg
		absolute()
		// right 0
		box-sizing border-box

		// width 50%
		// height 100%




		&:before
			content ""
			display inline-block
			vertical-align middle
			height 100%

		img, svg
			max-width 100%
			max-height 100%
			width auto
			height auto
			// outline 1px dotted rgba(white, .1)
			vertical-align inherit
			text-align inherit




		&.right
			right 0
			left 50%
			padding-left 12*16px // 192px
			text-align right
			@media screen and (min-width 1441px) and (max-width 1622px)
				left 0
				padding-left 155px + 288px + 560px // 1003px
			@media screen and (min-width 1361px) and (max-width 1440px)
				left 0
				padding-left 155px + 560px // 715px
			@media screen and (min-width 1281px) and (max-width 1360px)
				left 50%
				padding-left 2*16px // 32px
			@media screen and (max-width 1280px)
				left 0
				padding-left 110px + 560px // 670px
		// &.top.right
		// 	right 0
		// 	padding-left 0
		// 	@media screen and (min-width 1281px) and (max-width 1360px)
		// 		width 64.12%
		// 		padding-left 2*16px // 32px

		&.left
			left 0
			right 50%
			padding-right 23*16px
			text-align left
			@media screen and (min-width 1441px) and (max-width 1622px)
				padding 0
				width 288px + 155px
			@media screen and (max-width 1440px)
				display none
		&.side
			left 0
			padding-right 41*16px
			@media screen and (max-width 1700px)
				display none


		&.middle
			vertical-align middle
		&.bottom
			vertical-align bottom
		&.center
			text-align center

