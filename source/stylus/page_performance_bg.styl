.page.side-menu.test
	overflow hidden
	.container
		height 400px
		test(orange, 90deg)
		&:before, &:after
			// content "before"
			top 0
			display block
			absolute()
			width 100%
			height 100%
			test(yellow, 0deg)
		&:before
			content ""
			right 100%
			text-align right
		&:after
			content ""
			text-align left
			left 100%

