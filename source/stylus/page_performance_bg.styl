.page.side-menu.test
	overflow hidden
	.container
		height 400px
		test(orange, 90deg)
		&:before, &:after
			// content "before"
			top 0
			display block
			absolute()
			width 100%
			height 100%
			test(yellow, 0deg)
		&:before
			content ""
			right 100%
			text-align right
		&:after
			content ""
			text-align left
			left 100%

		@media screen and (max-width 1622px)
			test(orange, 0deg)
		@media screen and (max-width $small)
			test(orange, 90deg)
		@media screen and (max-width 1276px)
			test(orange, 0deg)

	.wrap
		height 350px
		test(white)
		@media screen and (max-width 1622px)
			test(white, 0deg)
	.content
		height 300px
		test(white, 135deg)

