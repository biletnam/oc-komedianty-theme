/********************************************************************************************************************************************
 *  HOME PAGE - CALENDAR
 ********************************************************************************************************************************************/
#home #playbill
    relative()
    margin-top -2*$mod

    .event
        display none // for JS
        &.active
            display block

    .ratio
        relative()
        ratio-box(80/52)

    .section-header
        absolute()
        width div(13/82)

        // z-index 3000

        bottom div(4/52)
        margin 0

        line-height .675em
        text-indent .12em

    .title-block
        absolute()

        width div(65/80)
        bottom div(4/52)
        right 0

        text-align right

        .title
            relative()
            top .35em

            margin 0
            margin-right -.08em

            second()
            fs -rem(60px)
            line-height 1.42em
            upcase()
            // letter-spacing 0.1em
            text-align right
            // font-weight bold

            a
                text-decoration none

            .oa-comma
                margin-right -.38em

        .author
            margin 0
            second()
            fs -rem(24px)
            line-height 1em
            // text-transform uppercase
            // letter-spacing 0.1em
            text-align right

            position absolute
            right 0
            top .05em

        .description
            upcase()
            letter-spacing 0.1em
            fs -rem(19px)



    .date-block
        absolute()
        z-index 200

        width div(13/82)
        height div(20/52)

        top div(16/52)

        background-color $brand_dark

        second()
        normal()
        upcase()
        text-align center
        // letter-spacing 0.1em
        color $text

        .date
            margin 0
            padding 0
            display block
        .day
            relative()
            top -(4/124)*1em
            fs -rem(150px)
            line-height 1.24em
            // font-weight bold

            &.double
                position relative
                top (20/124)*1em
                fs -rem(124px)

        .month
            absolute()
            fs -rem(24px)
            // margin-top .5em
            line-height .7em
            width 100%
            top div(12/22)

            &.Jan
                fs 2.5rem
            &.Feb
                fs 1.8rem
            &.Mar
                fs 2.2rem
            &.April
                fs 1.8rem
            &.May
                fs 2.2rem
                // letter-spacing .11em
                // text-indent .12em

        .weekday
            fs 1.6rem
            margin-top .8em
            line-height .5em

            absolute()
            width 100%
            bottom div(6/22)
            // top (13/22)*100%

            &.Mon
                fs -rem(16px)
                letter-spacing .02em
            &.Tue
                fs -rem(26px)
                letter-spacing .01em
            &.Wed
                fs -rem(32px)
                letter-spacing .15em
                text-indent .1em
            &.Thu
                fs -rem(28px)
                // letter-spacing .05em
            &.Fri
                fs -rem(25px)
                letter-spacing .01em
            &.Sat
                fs -rem(26px)
            &.Sun
                fs -rem(17px)
        // .time
        //  letter-spacing 0
        //  fs -rem(13px)
        .button-buy
            // margin-top $line
            line-height 1.3em
            fs -rem(16px)
            letter-spacing 0.02em

            absolute()
            width 100%
            bottom div(3/22)

            a
                color inherit
                text-decoration none
                border-bottom 1px solid


    .calendar
        // relative()
        height -rem(32px)
        margin-bottom 2*$mod

        background-color $brand_dark

        second()

        .nav
            absolute()
            display block

            top 145%

            padding 0
            font-size 0
            line-height 0

            cursor pointer
            color transparent
            border none
            outline none

            background transparent

            z-index 5000

            &.slick-prev
                right 100%
                triangle left -rem(11px) #7A1D00
                margin-right -rem(16px)
            &.slick-next
                left 100%
                triangle right -rem(11px) #7A1D00
                margin-left -rem(16px)


        .slider
            distribute()

            .slider-item
                relative()
                inline-block()

                height -rem(32px)
                width div(2/92)
                padding 0 div(1/92)

                vertical-align top

                line-height -rem(32px)

                color $text

                border none
                text-decoration none
                text-align center



                &:hover
                    border none
                    text-decoration none

                .day, .weekday
                    position relative
                    width 100%
                    text-align center

                    fs -rem(20px)
                    transition all .2s ease .05s

                .day
                    background $brand_dark

                .weekday
                    upcase()
                    display block
                    height -rem(46px)
                    margin-top -rem(12px)
                    fs -rem(16px)


                &.active, &:hover
                    // background $brand
                    z-index 99999

                    .day, .weekday
                        transition all .05s ease
                        font-weight 600

                    .day
                        padding 16px 8px
                        margin -16px -8px 0
                        fs -rem(30px)
                        box-shadow 0px 0px 24px 5px rgba(0,0,0,0.6)
                    .weekday
                        margin-top 4px
                        fs -rem(21px)

                &.active
                    .weekday
                        margin-top 8px;
                &.before
                    color $gray+20%