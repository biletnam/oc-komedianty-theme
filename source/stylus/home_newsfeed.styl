/********************************************************************************************************************************************
 *  HOME PAGE - NEWSFEED
 ********************************************************************************************************************************************/
#home #newsfeed

	margin-top div(6/120)
	margin-bottom div(6/120)
	relative()
	top -6px // TODO: Rewrite!

	.container
		max-width 1344px

	.section-header
		color #820028
		margin 0
		margin-bottom div(2/84)
		margin-left div(1/84)
		a
			color inherit

	.post-list

		.news

			&:before
				content ""
				display block
				margin-bottom div(40/26)

			relative()
			background-color #7A001D * .8
			width div(26/84)
			// height div(40/84)

			margin 0 div(1/84) div(4/84)

			float: left

		.featured
			absolute()
			top 0
			height div(16/40)
			overflow hidden
			img
				display block
		.featured-link
			display block
			&:hover
				opacity .6

		.entry-content
			absolute()
			top div(16/40)
			margin 0
			padding 0 (2.5/26)*100%
			height div(16/40)
			// overflow hidden

		h3
			second_font()
			text-transform none
			font-weight bold
			line-height 1.5em
			a
				text-decoration none
		.excerpt
			trim_elipsis(4, rem(24px))
			// absolute()
			// top div(18/40)
			// background-color white
		.link
			display block
			absolute()
			bottom div(5/40)
			left (2.5/26)*100%
			border-bottom solid 1px
			// margin 0 (2.5/26)*100%
			fs rem(16px)
			text-decoration none
		.meta
			fs rem(14px)
			absolute()
			bottom div(1/40)
			left (2.5/26)*100%
			// padding 0 (2.5/26)*100%
			.views
				margin-left .5em
		.info
			fs rem(14px)
			absolute()
			bottom div(1/40)
			right (2.5/26)*100%
			// padding 0 (2.5/26)*100%


	.newsArchive-link
		// relative()
		margin-left (3.5/84)*100%
		fs rem(26px)
		a
			text-decoration none
			border-bottom 1px solid
