/********************************************************************************************************************************************
 *  FOOTER
 ********************************************************************************************************************************************/

#footer
	color $gray_color
	margin-top 0
	fs (14/$rem)

	ul, li, p
		margin 0
		padding 0
		list-style none

	a
		link $text_color
		text-decoration none
		border none
		&:hover
			border none
			text-decoration none
			color $brand_color

	.container
		position relative
		&:before
			display block
			content ""
			width 100%
			padding-bottom (56/82)*100%
			@media screen and (max-width: 1600px)
				padding-bottom (60/82)*100%
	.wrap
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		// width 100%
		// height 100%

	.social-bottom
		position absolute
		width 100%
		bottom 100%
		text-align center
		.social-items
			margin-left .25em
			margin-right .25em
		.ssk-
			&youtube
				background-color $youtube_color
				&:hover
					background-color darken($youtube_color, 20%)
			&vimeo
				background-color $vimeo_color
				&:hover
					background-color darken($vimeo_color, 20%)


	.sitemap, .colophon ,colophon.small, .sponsors, .partners, .culture
		border-top 1px solid $gray_color

	.sitemap
		padding (4/82)*100% 0
		height (12/56)*100%
		@media screen and (max-width: 1600px)
			height (12/60)*100%

		.nav-menu
			fs 0
			text-align justify
			&:after
				content ""
				display inline-block
				width 100%
		.page_item
			display inline-block
			vertical-align top
			text-align center
			fs (14/$rem)
		// .subnav
		.subpage_item, .data p
			margin-top 1.2em
			@media screen and (max-width: 1600px)
				margin-top .8em
			a
				link $gray_color
				&:hover
					color $brand_color
					border none


	.colophon
		display block
		height (7/56)*100%
		padding-top (1/82)*100%
		@media screen and (max-width: 1600px)
			display none
	.colophon.small
		display none
		height (10/60)*100%
		padding-top (2/82)*100%
		@media screen and (max-width: 1600px)
			display block

	.colophon ,colophon.small
		color $text_color
		fs 0
		text-align justify
		&:after
			content ""
			display inline-block
			width 100%
		.colophon-item
			display inline-block

			text-align center
			fs (14/$rem)

			p
				margin-top 1.2em
				@media screen and (max-width: 1600px)
					margin-top .8em

	.sponsors, .partners
		position relative
		// height (8/60)*100%
		fs 0
		text-align justify
		&:after
			content ""
			display inline-block
			width 100%
		.sponsor
			display inline-block
			height 128px
			// width 75%
			// vertical-align middle
			text-align center
			a
				display inline-block
				vertical-align middle
				height 100%
				&:before
					content ""
					display inline-block
					vertical-align middle
					height 100%

			img
				display inline-block
				vertical-align middle
				max-width 100px
				max-height 100%
				height auto
				width auto

	.culture
		text-align center
		line-height 2rem
		border-top 1px solid
		// margin-top 2rem
		padding 2rem 0
		h4
			color $text_color
			normal()
			fs (16/$rem)
			second_font()
			margin 0
			margin-bottom 1rem

		a.logo
			// width 75px
			display block
			text-align center

			img
				display block
				margin 0 auto
				width 70px
				height auto