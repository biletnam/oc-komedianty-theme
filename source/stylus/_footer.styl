#footer
	// cf()
	color $gray_color
	// margin 4em 0 0 0
	//margin-top 160px // TODO: Rewrite
	margin-top 0


	fs (12/$rem)

	.container
		&:before
			display block
			content ""
			width 100%
			padding-bottom (56/82)*100%
		// cf()
		// max-width 1472px
		// border-top 1px solid
		// padding 0.66*4em 0
		// position relative

	.sitemap
		position absolute
		width 100%
		height (20/82)*100%
		top 0
	.colophon
		position absolute
		width 100%
		height (8/82)*100%
		top (8/82)*100%
	.sponsors
		position absolute
		width 100%
		height (8/82)*100%
		top (16/82)*100%
	.info-sponsors
		position absolute
		width 100%
		height (8/82)*100%
		top (24/82)*100%
	.culture
		position absolute
		width 100%
		height (8/82)*100%
		top (32/82)*100%

	ul, li, p
		margin 0
		padding 0
		list-style none

	.colophon
		border-top 1px solid


		.copyrights, .design, .address, .email
			display block
			width (1/4)*100%
			float left

			@media screen and (max-width: 480px)
				float none
				width 100%
				margin-bottom 2em

			text-align center

			color $text_color
			fs: (14/16)rem
			p
				margin 0
				padding 0
			a
				color inherit
				&:hover
					text-decoration none
					color $gray_color

	.sitemap
		border-top 1px solid

		a
			link $gray_color
			text-decoration none
			border none
			&:hover
				border none
				text-decoration none
				color $text_color


		.nav-menu
			position relative
			text-align justify
			font-size 0
			&:after
				content " "
				display inline-block
				width 100%

		.page_item
			position relative
			box-sizing border-box
			display inline-block

			// height (16/82)*100%

			@media screen and (max-width: 480px)
				display block
				margin-bottom 2em

			vertical-align top
			fs (16/$rem)

			text-align center

			// a
			// 	link $text_color
			// 	text-decoration none
			// 	border none
			// 	&:hover
			// 		border none
			// 		text-decoration none
			// 		color white

			&.about
				width (12/68)*100%
				@media screen and (max-width: 480px)
					width 100%

		.subnav, .data
			// margin-top 1.2em
			// text-align left
		.subpage_item, .data
			fs (14/$rem)

			a
				link $gray_color
				text-decoration none
				border none
				&:hover
					border none
					text-decoration none
					color $text_color

	.social-bottom
		text-align center
		position absolute
		width 100%
		bottom 100%
		top 2px
		.social-items
			margin-left .5em
			margin-right .5em

		.ssk-
			&youtube
				background-color $youtube_color
				&:hover
					background-color darken($youtube_color, 10%)
			&vimeo
				background-color $vimeo_color
				&:hover
					background-color darken($vimeo_color, 10%)

