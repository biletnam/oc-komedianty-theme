/********************************************************************************************************************************************
 *  REPERTOIRE PAGE
 ********************************************************************************************************************************************/
.page.repertoire

	.performance
		position relative
		margin-bottom (4/65)*100%
		@media screen and (max-width: 1440px)
			margin-bottom (4/72)*100%
		&:before
			content ""
			display block
			padding-bottom (20/65)*100%
			@media screen and (max-width: 1440px)
				padding-bottom (16/72)*100%

	.repertoire-cover
		position absolute
		top 0
		left 0
		display block
		background-size cover !important

		width (30/65)*100%
		@media screen and (max-width: 1440px)
			width (24/72)*100%

		&:before
			content ""
			display block
			padding-bottom (16/24)*100%

	.title-block, .synopsis, .performance-link
		position absolute
		width (28/65)*100%
		left (33/65)*100%
		@media screen and (max-width: 1440px)
			width (33/72)*100%
			left (28/72)*100%
	.title-block
		top -.75em
		.title
			margin-bottom .4em
			fs (28/$rem)
			line-height (31/28)
			color $brand_color
			second_font()
			a
				text-decoration none
				&:hover
					color $brand_color_bright
		.author
			margin-bottom .4em
		.description
			second_font()
			italic()
			white-space nowrap

		.rate
			main_font()
			color $text_color
			position absolute
			top .1em
			left 100%
			// margin-left 1em
			fs (24/$rem)
			font-weight 200

	.synopsis
		top (7/20)*100%
		fs (16/$rem)
		line-height (22/16)
		trim_elipsis(6)
		@media screen and (max-width: 1440px)
			top (6/16)*100%
			fs (15/$rem)
			line-height (20/15)
			trim_elipsis(6)
		@media screen and (max-width: 1280px)
			trim_elipsis(5)

	.performance-link
		// bottom -.2em
		bottom 0
		a
			color $brand_color_dark
			text-decoration none
			border-bottom 1px solid
			&:hover
				color $brand_color_bright
