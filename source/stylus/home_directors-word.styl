/********************************************************************************************************************************************
 *  DIRECTORS WORD
 ********************************************************************************************************************************************/
#home #directors-word
	relative()

	background #0e0204
	background url('../images/directors_word.jpg') no-repeat #0e0204
	background-position top right
	background-size auto 100%

	// margin-bottom -32px

	h2
		fs -rem(33px)

	h2, h3
		second_font()
		text-transform uppercase
		font-weight normal
	h3
		text-transform none

	.wrap
		padding 48px 0

	.content
		second_font()
		width div(36/82)
		margin-left (2.5/82)*100%

		// margin-bottom div(2/82)

		fs -rem(20px)


		&:before
			content "«"

			absolute()
			right div(81/82)
			top 1.94em

			fs -rem(100px)
			line-height .5em
			color $gray_color
			second_font()
			opacity .5

		&:after
			content "»"

			relative()
			left (83.5/82)*100%
			bottom 1.855em

			fs -rem(100px)
			line-height .5em
			color $gray_color
			second_font()
			opacity .5