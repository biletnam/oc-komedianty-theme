
.bg
	img, svg
		display inline-block
		vertical-align middle
		// @media screen and (max-width: 1600px)
		max-width 100%
		max-height 100%
		width auto
		height auto

	pointer-events none

.bg-1,.bg-2,.bg-3
	text-align right
.bg-4,.bg-5,.bg-5
	text-align left

.bg-1
	position absolute
	top 0
	width (54/120)*100%
	right 0

.bg-2
	position absolute
	top 33%
	width (49/120)*100%
	right 0

.bg-3
	position absolute
	bottom 0
	width (49/120)*100%
	right 0
	// width 350px

.bg-4
	position absolute
	bottom 0
	width (36/120)*100%
	left 0

.bg-5
	position absolute
	top 0
	padding-top (34/120)*100%
	width (36/120)*100%
	left 0

.bg-6
	position absolute
	top 0
	width (19/120)*100%
	left 0

@media screen and (max-width: 1440px)
	.bg-1
		width (50/84)*100%

	.bg-2
		top 33%
		width (45/84)*100%

	.bg-3
		width (45/84)*100%

	.bg-4, .bg-5, .bg-6
		display none


