/********************************************************************************************************************************************
 *  PERFORMANCE PAGE
 ********************************************************************************************************************************************/
#performance-page
	background-size cover
	position relative

	.content
		position relative

		padding-left (17/82)*100%
		margin-top (5/82)*100%
		margin-bottom (16/82)*100%
		
		top -25px

		width (30/82)*100%

		.author
			fs (22/$rem)
			second_font()
			font-style italic

		.title
			header()
			fs (35/$rem)

		.description
			second_font()
			fs (18/$rem)
			font-style italic
			// padding 1em 0
		.about
			margin-top 3em

		.add
			position absolute
			width (21/38)*100%
			height 4em
			top 19px
			left (40/38)*100%

			.premiere-date, .duration
				position absolute
				display block
				margin 0
				// width (10/20)*100%
				border-top 1px solid $brand_color
			.duration
				left (22/38)*100%
				// width (17/38)*100%


		.title, h1, h2, h3, h4, h5, h6
			color $brand_color

		h4
			text-transform uppercase
			fs (16/$rem)
			font-weight 400
			margin-top 3em

		dl
			cf()
			display block
			margin 0
			padding 0
		dt
			float left
			clear left
			margin 0
			padding 0
			&:after
				content ":Â "
		dd
			margin 0
			padding 0

		ul, li
			margin 0
			padding 0
		li
			list-style none
			margin-bottom 1.5em


		&.kompromiss
			.title
				fs (56/$rem)

			.title, h1, h2, h3, h4, h5, h6, .author
				color #E59E2C

			.premiere-date, .duration
				border-color #E59E2C