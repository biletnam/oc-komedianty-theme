/********************************************************************************************************************************************
 *  PERFORMANCE PAGE
 ********************************************************************************************************************************************/
.page.performance
	position relative
	margin-bottom (12/120)*100%

	.content
		width (35/82)*100%

		@media screen and (max-width: 1366px)
			width (32/64)*100%

	.author
		fs (22/$rem)
		second_font()
		font-style italic
		margin-top .8em

	.title
		header()
		font-weight normal
		fs (40/$rem)
		line-height (48/40em)

	.description
		color $brand_color_bright
		second_font()
		fs (17/$rem)
		font-style italic
		font-weight 100
		// margin-top 2*(16/22em)
		margin-top .2em

		max-width (25/35)*100%

		&.alone
			color $brand_color_bright

	.about
		margin-top 1.7em
		fs (18/$rem)
		line-height (23/18em)

		max-width (32/35)*100%

	.premiere-date, .duration
		position absolute
		display block
		margin 0
		// width (10/20)*100%
		// border-top 1px solid $brand_color
		fs (14/$rem)

	.duration
		left (37/35)*100%
		top 0
		color $gray_color
		width 100%
		margin-top 4px
		// right 0
		// width (17/38)*100%
	.premiere-date
		top 100%
		left 0
		margin-top (2/35)*100%


	.earliest-block
		display block
		margin 0
		padding 0

		width (10/35)*100%

		position absolute
		right ((7+35)/35)*100%
		top 0
		margin-top (9/35)*100%

		h5
			text-transform uppercase
			color $text_color
			margin-bottom 1.5em


		.day
			fs(154/$rem)
			line-height (96/154em)
			second_font()
			bold()
			position relative
			left -.04em
			&.num-11,
			&.num-12,
			&.num-13,
			&.num-14,
			&.num-15,
			&.num-16,
			&.num-17,
			&.num-18,
			&.num-19
				left -.1em

		.month
			fs(35/$rem)
			line-height 1
			margin-top .6em
			second_font()
			normal()
			text-transform uppercase
		.weekday
			fs(18/$rem)
			second_font()
			margin-top .35em
			text-transform uppercase
		.buy-button
			second_font()
			width 100%
			margin-top 1em
			text-align center
			padding 1em .2em
			text-transform uppercase
			background rgba(white,.1)
			a
				text-decoration none


	h1, h2, h3, h4, h5, h6
		color $brand_color

	h4
		text-transform uppercase
		fs (16/$rem)
		font-weight 400
		margin-top 3em
		margin-bottom 1.2em

	h5
		font-weight 300
		color $brand_color_dark
		margin-bottom .2em
		margin-bottom 0

	dl
		cf()
		display block
		margin 0
		padding 0
	dt
		// float left
		// clear left
		display inline
		margin 0
		padding 0
		&:after
			content " — "
	dd
		display inline
		margin 0
		padding 0
		&:after
			content: " "
			display block

	.creators, .roles
		fs (16/$rem)
		line-height (23/16em)

	ul, li
		margin 0
		padding 0
	li
		list-style none
		// margin-bottom 1.5em

	.press
		li:before
			content "– "

	.press-list
		margin-bottom 1.5em


	.video
		margin-top 2em


	.gallery
		position relative

		margin-top 2em

		$c = 560
		$m = 25
		$cnt = 3

		width (($c + $m)/$c)*100%
		margin-bottom -($m/($c + $m))*100%


		font-size 0

		.gallery-item
			display inline-block
			position relative

			width ((($c + $m) - ($cnt*$m))/$cnt/($c + $m))*100%
			margin 0 ($m/($c + $m))*100% ($m/($c + $m))*100% 0

			padding 0


			overflow hidden

			font-size 0

			// transform scale(.8)
			transition all 1s ease-out .5s

			&:before
				content ""
				font-size 0
				display block
				width 100%
				padding-bottom 100%
			// &:after
			// 	content ""
			// 	font-size 0
			// 	display block
			// 	position absolute
			// 	box-sizing border-box
			// 	width 100%
			// 	height 100%
			// 	top 0
			// 	left 0
			// 	// border 15px solid #000
			// 	// width 100%
			// 	// padding-bottom 100%
			// 	pointer-events none

			&:hover
				// outline 3px solid $brand_color_dark
				transform scale(1.15)
				transition all 1s ease-out .5s
				// &:after
				// 	border 0

			a
				position absolute
				top 0
				width 100%
				height 100%
				// text-align center
				display block
				// right -50%

			img
				// height 177px
				// width auto
				// max-width 100%
				// max-height 100%
				// max-width inherit
				// display block

				// margin-left auto
				// margin-right auto

				position relative
				// top 100%
				opacity 0

				// left -50%
				// margin-left (-265/2px)

				// position absolute
				// top -9999px
				// bottom -9999px
				// left -9999px
				// right -9999px
				// margin auto


	&.kompromiss
		.title
			fs (56/$rem)

