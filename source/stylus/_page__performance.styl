			// 	// padding-bottom 100%
			// 	pointer-events none

			&:hover
				// outline 3px solid $brand_color_dark
				transform scale(1.15)
				transition all 1s ease-out .5s
				// &:after
				// 	border 0

			a
				position absolute
				top 0
				width 100%
				height 100%
				// text-align center
				display block
				// right -50%

			img
				// height 177px
				// width auto
				// max-width 100%
				// max-height 100%
				// max-width inherit
				// display block

				// margin-left auto
				// margin-right auto

				position relative
				// top 100%
