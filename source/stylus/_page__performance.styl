/********************************************************************************************************************************************
 *  PERFORMANCE PAGE
 ********************************************************************************************************************************************/
.page.performance
	position relative

	.content
		width (35/82)*100%

	.author
		fs (22/$rem)
		second_font()
		color $brand_color_bright
		font-style italic
		margin-top 1em

	.title
		header()
		font-weight normal
		fs (40/$rem)
		line-height (48/40em)

	.description
		second_font()
		fs (18/$rem)
		font-style italic
		// margin-top 2*(16/22em)
		margin-top 1em

		max-width (25/35)*100%

		&.alone
			color $brand_color_bright

	.about
		margin-top 1.5em
		fs (18/$rem)
		line-height (23/18em)

		max-width (32/35)*100%

	.add
		position absolute
		width (25/35)*100%
		height 4em
		top 19px
		left (57/52)*100%

		font-size (14/$rem)
		line-height (22/14em)

		.premiere-date, .duration
			position absolute
			display block
			margin 0
			// width (10/20)*100%
			border-top 1px solid $brand_color
		.duration
			left (11/25)*100%
			// right 0
			// width (17/38)*100%


	h1, h2, h3, h4, h5, h6
		color $brand_color

	h4
		text-transform uppercase
		fs (16/$rem)
		font-weight 400
		margin-top 3em

	h5
		font-weight 300
		color $brand_color_dark
		margin-bottom .2em
		margin-bottom 0

	dl
		cf()
		display block
		margin 0
		padding 0
	dt
		// float left
		// clear left
		display inline
		margin 0
		padding 0
		&:after
			content " — "
	dd
		display inline
		margin 0
		padding 0
		&:after
			content: " "
			display block

	.creators, .roles
		fs (16/$rem)
		line-height (23/16em)

	ul, li
		margin 0
		padding 0
	li
		list-style none
		// margin-bottom 1.5em

	.press
		li:before
			content "– "

	.press-list
		margin-bottom 1.5em


	.video
		margin-top 2em


	.gallery
		position relative

		margin-top 2em

		$c = 560
		$m = 25
		$cnt = 3

		width (($c + $m)/$c)*100%
		margin-bottom -($m/($c + $m))*100%


		font-size 0

		.gallery-item
			display inline-block
			position relative

			width ((($c + $m) - ($cnt*$m))/$cnt/($c + $m))*100%
			margin 0 ($m/($c + $m))*100% ($m/($c + $m))*100% 0

			padding 0


			overflow hidden

			font-size 0

			// transform scale(.8)
			transition all 1s ease-out .5s

			&:before
				content ""
				font-size 0
				display block
				width 100%
				padding-bottom 100%
			// &:after
			// 	content ""
			// 	font-size 0
			// 	display block
			// 	position absolute
			// 	box-sizing border-box
			// 	width 100%
			// 	height 100%
			// 	top 0
			// 	left 0
			// 	// border 15px solid #000
