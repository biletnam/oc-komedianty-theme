/********************************************************************************************************************************************
 *  PERFORMANCE PAGE
 ********************************************************************************************************************************************/
.page.performance

	.content
		width (35/82)*100%

	.author
		fs (22/$rem)
		second_font()
		color $brand_color_bright
		font-style italic
		margin-top 1em

	.title
		header()
		font-weight normal
		fs (40/$rem)
		line-height (48/40em)

	.description
		second_font()
		fs (18/$rem)
		font-style italic
		// margin-top 2*(16/22em)
		margin-top 1em

		max-width (25/35)*100%

		&.alone
			color $brand_color_bright

	.about
		margin-top 1.5em
		fs (18/$rem)
		line-height (23/18em)

		max-width (32/35)*100%

	.add
		position absolute
		width (25/52)*100%
		height 4em
		top 19px
		left (57/52)*100%

		font-size (14/$rem)
		line-height (22/14em)

		.premiere-date, .duration
			position absolute
			display block
			margin 0
			// width (10/20)*100%
			border-top 1px solid $brand_color
		.duration
			left (11/25)*100%
			// right 0
			// width (17/38)*100%


	h1, h2, h3, h4, h5, h6
		color $brand_color

	h4
		text-transform uppercase
		fs (16/$rem)
		font-weight 400
		margin-top 3em

	h5
		font-weight 300
		color $brand_color_dark
		margin-bottom .2em
		margin-bottom 0

	dl
		cf()
		display block
		margin 0
		padding 0
	dt
		// float left
		// clear left
		display inline
		margin 0
		padding 0
		&:after
			content " — "
	dd
		display inline
		margin 0
		padding 0
		&:after
			content: " "
			display block

	.creators, .roles
		fs (16/$rem)
		line-height (23/16em)

	ul, li
		margin 0
		padding 0
	li
		list-style none
		// margin-bottom 1.5em

	.press
		li:before
			content "– "

	.press-list
		margin-bottom 1.5em


	.video
		margin-top 2em


	.gallery
		margin-top 2em
		// margin-left -3px
		margin-right -(9.66666/(35*16))*100%
		font-size 0
		.gallery-item
			display inline-block
			margin 0 (9.66666/560)*100% (9.66666/560)*100%  0
			// margin 4px
			padding 0

			// width 177px
			// height 177px

			width (177/560)*100%

			// text-align center

			position relative
			overflow hidden

			font-size 0

			&:before
				content ""
				font-size 0
				display block
				width 100%
				padding-bottom 100%

			&:hover
				outline 3px solid $brand_color_dark

			a
				position absolute
				top 0
				width 100%
				height 100%
				// text-align center
				display block
				// right -50%

			img
				// height 177px
				// width auto
				// max-width 100%
				// max-height 100%
				// max-width inherit
				// display block

				// margin-left auto
				// margin-right auto

				position relative
				// top 100%
				opacity 0

				// left -50%
				// margin-left (-265/2px)

				// position absolute
				// top -9999px
				// bottom -9999px
				// left -9999px
				// right -9999px
				// margin auto


	&.kompromiss
		.title
			fs (56/$rem)

