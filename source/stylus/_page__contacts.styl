/********************************************************************************************************************************************
 *  CONTACTS PAGE
 ********************************************************************************************************************************************/
#contacts-page

	margin-bottom -32px

	#google-map
		position relative
		padding-bottom 33%

		background url('../images/map_blur.jpg') 100% 100% no-repeat

	#map-canvas
		position absolute
		top 0
		width 100%
		height 100%
		margin 0px
		padding 0p

	.info
		margin-top (2/82)*100%
		margin-bottom (4/82)*100%
		cf()

	.column
		width (20/82)*100%
		float left

		fs (18/$rem)

		&.times
			width (17/82)*100%

			fs (17/$rem)
			color $gray_color + 30%

			.time
				color $brand_color_dark

		.subheader
			display inline-block
			margin-bottom .35em
			color $brand_color

		.lead
			display inline-block
			margin-top .15em
			second_font()
			fs (24/$rem)
			color $brand_color

	.contacts-bg
		background url('../images/contacts.png') no-repeat
		background-position top center
		background-size 100% auto
		// min-height (1391/1920)*100%

	.content
		margin-left (17/82)*100%
		margin-top (4/82)*100%
		margin-bottom (35/82)*100%
		width (23/82)*100%

		fs (14/$rem)

		.main-address
			margin-bottom (4/23)*100%
			padding-bottom (4/23)*100%
			border-bottom 1px solid $brand_color

		.phone
			color $brand_color