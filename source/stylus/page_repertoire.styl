// *****************************************************************************************************************************************
// REPERTOIRE PAGE
// *****************************************************************************************************************************************/
.page.repertoire

	.performance
		relative()
		margin-bottom 4*$rem
		margin-right 4*$rem
		// height 20*$rem
		// padding-bottom div(16/64)
		// @media screen and (max-width $normal)
		// 	height 18*$rem

	.repertoire-cover
		display block
		width div(30/64)
		background-position center center
		background-size cover !important
		z-index 10
		ratio-box(24/17)
		@media screen and (max-width $normal)
			width div(26/66)
			ratio-box(24/16)
		// absolute top left
		&:hover
			opacity .6

	.title-block, .synopsis, .performance-link
		absolute()
		left 0
		right 0
		padding-left div(34/64)
		@media screen and (max-width $normal)
			padding-left div(31/66)
	.title-block
		top .2em
		@media screen and (max-width $normal)
			top 0
		.title
			relative()
			margin-bottom .4em
			fs rem(28px)
			line-height (31/28)
			a
				inline-block()
				min-width 100%
				margin-right 1em
			second()
			nowrap()
			a
				colors($brand, $brand_dark, darken($brand_dark, 15%))
		.author
			margin-bottom 0
			white-space nowrap
		.description
			second()
			italic()
			white-space nowrap

		.rate
			first()
			color $text
			// absolute()
			// top 0
			// right -4*$rem
			fs rem(24px)
			font-weight 200

	.synopsis
		top 7.5*$rem
		fs rem(16px)
		line-height (22/16)
		trim_elipsis(7, rem(22px))
		@media screen and (max-width $large)
			trim_elipsis(5, rem(22px))
		@media screen and (max-width $normal)
			top 7*$rem
			fs rem(15px)
			line-height (21/15)
			// trim_elipsis(7)
		@media screen and (max-width $small)
			top 7*$rem
			trim_elipsis(4, rem(22px))

	.performance-link
		bottom 0
		a
			colors($brand, $brand_dark, darken($brand_dark, 15%))
			border-bottom 1px solid
