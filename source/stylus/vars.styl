colors(current = $text, hover = $brand, active = $brand_dark)
	color current
	&:hover
		color hover
	&:active
		color active

-em($val)
	return $val * 1em


// ************************************************************************************************
// STYLE MIXINS
// ************************************************************************************************

button(color = $button, hover = $brand, text = $text, hovertext = #fff)
	relative()
	inline-block()
	padding .8em 2em
	// bottom .8em

	reset-link()

	fs rem(16px)

	cursor pointer

	color text
	transition all .5s ease-out
	border none

	&:before
		content ""

		absolute()
		top 0
		right 0
		bottom 0
		left 0

		background color
		z-index -1

		transition background .5s ease-out

	&:hover
		color hovertext
		&:before
			background hover

	&:active
		&:before
			margin .2em