/********************************************************************************************************************************************
 *  MAIN MENU
 ********************************************************************************************************************************************/
#site-navigation

	position relative

	@media screen and (max-width: 480px)
		display none

	ul, li
		list-style none
		margin 0
		padding 0

	a
		text-decoration none
		text-transform uppercase

		color $brand_color_dark

		font-weight 500

		opacity .75

		&:hover
			color $brand_color_bright
			transition color ease-out .3s
			// font-weight 400

			opacity 1

	.mainMenu
		font-size 0
		text-align justify


		&:after
			content ""
			display inline-block
			width 100%

		.mainMenu-item
			display inline-block
			padding-top 1.67em
			fs(20/$rem)


			&.active, &.child-active
				a
					color $brand_color_hover
					font-weight 500

					opacity 1

				.sideMenu
					display block

			.sideMenu
				display none
				position absolute

				font-weight normal
				fs (16/$rem)

				// top (20/82)*100%
				// top 0
				left 0
				margin-top (4/82)*100%
				width (15/82)*100%
				// bottom -((12+82)/82)*100%
				// bottom -300%

				.sideMenu-item
					display block

					// margin-bottom .4em
					margin-bottom .8em
					// margin-bottom 2.7em
					a
						// color $brand_color_dark
						color $text_color
						font-weight 300
						text-decoration none
						border none

						line-height 1.25em

						// opacity .75

						&:hover
							color $brand_color
							&:hover
								border none
					&.active
						& > a
							color $brand_color
							opacity 1

	@media screen and (max-width: 1440px)
		.mainMenu
			// display table
			position relative
			// -webkit-transition: height 500ms ease 500s;
			.mainMenu-item
				// position relative
				vertical-align top
				// display inline
				// width 80px // !!!!
				padding-top 1.56em
				&:hover
					.sideMenu
						display block
						z-index 9999
				&.active, &.child-active
					.sideMenu
						display none
						// height 0
					&:hover
						.sideMenu
							display block
				.sideMenu
					display none
					position static
					margin-top -5em
					padding-top 5.5em
					&:hover
						display block
					// position absolute
					// position relative
					top 100%
					left inherit
					width 50px

					z-index 999


					.sideMenu-item
						a
							color $gray_color
							text-transform inherit
						&.active
							a
								color $text_color
						width 300%
						// white-space nowrap
						padding-right 100%
						margin-bottom .5em
						// position absolute
